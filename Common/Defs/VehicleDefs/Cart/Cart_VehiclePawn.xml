<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseVehiclePawnWithMap">
		<defName>VIF_Cart</defName>
		<label>cart</label>
		<description>Large cart that can carry things.\n\n&lt;color=#bb8f04&gt;Fuel type:&lt;/color&gt; Human Power</description>

		<graphicData>
			<texPath>VehicleInteriors/Cart/Cart</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4.40234375,8.236328125)</drawSize>
			<color>(133,97,67)</color>
		</graphicData>

		<fillPercent>0.55</fillPercent>

		<buildDef>VIF_Cart_Blueprint</buildDef>

		<size>(4,7)</size>

		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Transport</vehicleCategory>
		<techLevel>Neolithic</techLevel>
		<vehicleType>Land</vehicleType>

		<statBases>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.2</ArmorRating_Sharp>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Flammability>1.0</Flammability>
			<MarketValue>230</MarketValue>
		</statBases>

		<vehicleStats>
			<Mass>85</Mass>
			<MoveSpeed>2</MoveSpeed>
			<CargoCapacity>0</CargoCapacity>
			<RepairRate>1.5</RepairRate>
			<MaximumPayload>250</MaximumPayload>
		</vehicleStats>

		<race>
			<baseBodySize>4</baseBodySize>
		</race>

		<properties>
			<customTerrainCosts DisallowTerrainWithTag="Water"/>
			<customHillinessCosts>
				<SmallHills>0.25</SmallHills>
				<LargeHills>0.75</LargeHills>
				<Mountainous>1.5</Mountainous>
			</customHillinessCosts>

			<roles>
				<li>
					<key>Puller</key>
					<label>Puller</label>
					<handlingTypes>Movement</handlingTypes>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<exposed>true</exposed>
					<hitbox>
						<cells>
							<li>(0,3)</li>
						</cells>
					</hitbox>
					<pawnRenderer>
						<drawOffsetNorth>(0,0,3)</drawOffsetNorth>
						<drawOffsetSouth>(0,0,-3)</drawOffsetSouth>
						<drawOffsetEast>(3,0,0)</drawOffsetEast>
					</pawnRenderer>
				</li>
				<li>
					<key>Pusher</key>
					<label>Pusher</label>
					<handlingTypes>Movement</handlingTypes>
					<slots>1</slots>
					<exposed>true</exposed>
					<hitbox>
						<cells>
							<li>(0,-3)</li>
						</cells>
					</hitbox>
					<pawnRenderer>
						<drawOffsetNorth>(0,0,-3.5)</drawOffsetNorth>
						<drawOffsetSouth>(0,0,3.5)</drawOffsetSouth>
						<drawOffsetEast>(-3.5,0,0)</drawOffsetEast>
						<layerNorth>1</layerNorth>
						<layerSouth>-1</layerSouth>
					</pawnRenderer>
				</li>
			</roles>
		</properties>

		<components>
			<li>
				<key>LeftWheel</key>
				<label>Left wheel</label>
				<health>30</health>
				<depth>External</depth>

				<tags>
					<li>Wheel</li>
				</tags>

				<hitbox>
					<cells>
						<li>(-1, -2)</li>
						<li>(-1, -1)</li>
						<li>(-1, 0)</li>
					</cells>
				</hitbox>

				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>RightWheel</key>
				<label>Right wheel</label>
				<health>30</health>
				<depth>External</depth>
				
				<tags>
					<li>Wheel</li>
				</tags>

				<hitbox>
					<cells>
						<li>(2, -2)</li>
						<li>(2, -1)</li>
						<li>(2, 0)</li>
					</cells>
				</hitbox>

				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>WoodenStructure</key>
				<label>Wooden structure</label>
				<health>50</health>
				<depth>External</depth>

				<hitbox>
					<cells>
						<li>(-1, -2)</li>
						<li>(0, -2)</li>
						<li>(1, -2)</li>
						<li>(2, -2)</li>
						<li>(-1, -1)</li>
						<li>(0, -1)</li>
						<li>(1, -1)</li>
						<li>(2, -1)</li>
						<li>(-1, 0)</li>
						<li>(0, 0)</li>
						<li>(1, 0)</li>
						<li>(2, 0)</li>
						<li>(-1, 1)</li>
						<li>(0, 1)</li>
						<li>(1, 1)</li>
						<li>(2, 1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>Handles</key>
				<label>Handles</label>
				<health>10</health>
				<depth>External</depth>
				<categories>
					<li>MoveSpeed</li>
				</categories>

				<hitbox>
					<cells>
						<li>(0, 2)</li>
						<li>(1, 2)</li>
						<li>(0, 3)</li>
						<li>(1, 3)</li>
					</cells>
				</hitbox>
			</li>
		</components>

		<modExtensions>
			<li Class="VehicleInteriors.VehicleMapProps">
				<size>(3,5)</size>
				<offsetNorth>(0.00390625,0,-0.0673828125)</offsetNorth>
				<offsetSouth>(0.001953125,0,-0.2041015625)</offsetSouth>
				<offsetEast>(0.0712890625,0,-0.00390625)</offsetEast>
				<emptyStructureCellRects>
					<li>(0,4,2,4)</li>
				</emptyStructureCellRects>
				<edgeSpaceNorth>
					<north>0.8</north>
					<south>0.15</south>
					<east>0.3984375</east>
				</edgeSpaceNorth>
				<edgeSpaceEast>
					<north>0.5</north>
					<east>0.15</east>
					<west>0.6171875</west>
				</edgeSpaceEast>
			</li>
			<li Class="VehicleInteriors.VehicleHumanPowered"/>
		</modExtensions>
	</Vehicles.VehicleDef>
</Defs>