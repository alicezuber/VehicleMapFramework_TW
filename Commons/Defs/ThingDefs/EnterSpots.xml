<Defs>
	<ThingDef Name="VehicleEnterSpotBase" ParentName="FurnitureBase" Abstract="True">
		<designationCategory>VF_Vehicles</designationCategory>
		<altitudeLayer>Building</altitudeLayer>
		<minifiedDef Inherit="False"/>
		<category Inherit="False"></category>
		<passability>Standable</passability>
		<placeWorkers>
			<li>VehicleInteriors.PlaceWorker_ForceOnVehicle</li>
		</placeWorkers>
	</ThingDef>
	
	<ThingDef ParentName="VehicleEnterSpotBase">
		<defName>VIF_Ladder</defName>
		<label>ladder</label>
		<description>test</description>
		<category>Building</category>
		<minifiedDef>MinifiedThing</minifiedDef>
		<graphicData>
			<texPath>VehicleInteriors/Things/EnterSpot/Laddar</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.84765625,1.84765625)</drawSize>
			<drawOffsetNorth>(0,0,-1)</drawOffsetNorth>
			<drawOffsetSouth>(0,0,1)</drawOffsetSouth>
			<drawOffsetEast>(-1,0,-0.5)</drawOffsetEast>
			<drawOffsetWest>(1,0,-0.5)</drawOffsetWest>
		</graphicData>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<Beauty>1</Beauty>
			<WorkToBuild>100</WorkToBuild>
			<Mass>5</Mass>
		</statBases>
		<size>(1,1)</size>
		<costList>
			<Steel>5</Steel>
		</costList>
		<uiOrder>1000</uiOrder>
		<comps>
			<li Class="VehicleInteriors.CompProperties_VehicleEnterSpot"/>
		</comps>
	</ThingDef>

	<DesignatorDropdownGroupDef>
		<defName>VIF_VehicleSlopeGroup</defName>
	</DesignatorDropdownGroupDef>

	<ThingDef Name="VehicleSlopeBase" ParentName="VehicleEnterSpotBase" Abstract="True">
		<designatorDropdown>VIF_VehicleSlopeGroup</designatorDropdown>
		<thingClass>VehicleInteriors.Building_VehicleSlope</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<tickerType>Normal</tickerType>
		<graphicData>
			<graphicClass>Graphic_Terrain</graphicClass>
		</graphicData>
		<building>
			<upperMoverGraphic>
				<graphicClass>Graphic_Multi</graphicClass>
			</upperMoverGraphic>
		</building>
		<comps>
			<li Class="VehicleInteriors.CompProperties_VehicleEnterSpot">
				<allowPassingVehicle>true</allowPassingVehicle>
			</li>
		</comps>
	</ThingDef>
	
